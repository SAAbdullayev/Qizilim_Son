@model IEnumerable<QizilimUser>
@{ ViewData["Title"] = "Index"; }

<h1>Userler</h1>


@section css {
    <style>
        .image {
            width: 200px;
            height: auto;
        }
    </style>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Username</th>
                        <th scope="col">Name</th>
                        <th scope="col">Shop Name</th>
                        <th scope="col">Shop Number</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr data-entity-id="@item.Id">
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.Name</td>
                        <td>@item.shopName</td>
                        <td>@item.shopNumber</td>
                        @if (item.Status == null)
                        {
                            <td>Pending</td>
                        }
                        else if(item.Status == true)
                        {
                            <td class="text-success">Accepted</td>
                        }
                        else if(item.Status == false)
                        {
                            <td class="text-danger">Rejected</td>
                        }
                        <td class="atributlar">
                            <a asp-controller="RegisterVerify" asp-action="Accept" asp-route-id="@item.Id" class="text-success">Accept</a> |
                            <a asp-controller="RegisterVerify" asp-action="Reject" asp-route-id="@item.Id" class="text-danger">Reject</a> 
                        </td>
                    </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>